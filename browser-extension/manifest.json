{
    "manifest_version": 3,
    "name": "Gllove",
    "version": "1.0",
    "description": "Mod ChatGPT input and UI",
    "icons": {
        "128": "icon.png"
    },
    "permissions": [],
    "host_permissions": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://*.serveo.net/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://chat.openai.com/*",
                "https://chatgpt.com/*",
                "https://*.serveo.net/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_icon": "icon.png",
        "default_title": "Gllove Active"
    }
}